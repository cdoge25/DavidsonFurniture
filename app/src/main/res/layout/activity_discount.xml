<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.DiscountActivity"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarDiscount"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:navigationIcon="@drawable/ic_action_back"
        app:contentInsetStartWithNavigation="0dp"
        android:layout_marginBottom="0dp"
        android:elevation="5dp"
        android:background="@color/white">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mã giảm giá"
            android:fontFamily="@font/futura_bold"
            android:textColor="@color/orange"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_marginEnd="50dp"/>
    </androidx.appcompat.widget.Toolbar>
    <!--END HEADER-->

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90sp"
        android:layout_marginTop="10sp"
        android:layout_marginStart="20sp"
        android:layout_marginEnd="20sp"
        android:background="@drawable/custom_view"
        android:orientation="horizontal"
        android:weightSum="4"
        android:backgroundTint="#F5F5F5">
        
        <ImageView
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:src="@drawable/ic_pick_voucher"
            android:layout_weight="0.5"
            android:layout_gravity="center_vertical"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="90sp"
            android:layout_weight="2.5"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Miễn phí vận chuyển"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:fontFamily="@font/futura_book"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Đơn tối thiêu 1tr, miễn phí tối đa 50k"
                android:textSize="10sp"
                android:textColor="@color/black"
                android:fontFamily="@font/futura_book"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="HSD: 1/12/2022"
                android:textSize="10sp"
                android:textColor="@color/grey"
                android:fontFamily="@font/futura_book"/>

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray" />

        <Button
            android:id="@+id/btn_freeDelivery1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#F5F5F5"
            android:text="Chọn"
            android:textColor="#FF6600"
            android:textSize="10sp"
            android:textAllCaps="false"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90sp"
        android:layout_marginTop="10sp"
        android:layout_marginStart="20sp"
        android:layout_marginEnd="20sp"
        android:background="@drawable/custom_view"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:weightSum="4"
        android:backgroundTint="#F5F5F5">

        <ImageView
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:src="@drawable/ic_pick_voucher"
            android:layout_weight="0.5"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="90sp"
            android:layout_weight="2.5"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Miễn phí vận chuyển"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:fontFamily="@font/futura_book"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Đơn tối thiêu 5tr, miễn phí tối đa 250k"
                android:textSize="10sp"
                android:textColor="@color/black"
                android:fontFamily="@font/futura_book"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="HSD: 1/12/2022"
                android:textSize="10sp"
                android:textColor="@color/grey"
                android:fontFamily="@font/futura_book"/>

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray" />

        <Button
            android:id="@+id/btn_freeDelivery2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#F5F5F5"
            android:text="Chọn"
            android:textSize="10sp"
            android:textColor="#FF6600"
            android:textAllCaps="false"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90sp"
        android:layout_marginTop="10sp"
        android:layout_marginStart="20sp"
        android:layout_marginEnd="20sp"
        android:background="@drawable/custom_view"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:weightSum="4"
        android:backgroundTint="#F5F5F5">

        <ImageView
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:src="@drawable/ic_pick_voucher"
            android:layout_weight="0.5"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="90sp"
            android:layout_weight="2.5"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Giảm 10%"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:fontFamily="@font/futura_book"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Đơn tối thiêu 10tr, giảm tối đa 1tr"
                android:textSize="10sp"
                android:textColor="@color/black"
                android:fontFamily="@font/futura_book"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="HSD: 1/12/2022"
                android:textSize="10sp"
                android:textColor="@color/grey"
                android:fontFamily="@font/futura_book"/>

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray" />

        <Button
            android:id="@+id/btn_discountDelivery"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#F5F5F5"
            android:text="Chọn"
            android:textSize="10sp"
            android:textColor="#FF6600"
            android:textAllCaps="false"/>

    </LinearLayout>

</LinearLayout>