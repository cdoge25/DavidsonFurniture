<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarImageResourceReturn"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:elevation="2dp"
        android:background="@drawable/custom_bottom_sheet"
        app:menu="@menu/bottom_sheet_cancel_heading"
        android:theme="?attr/actionBarTheme">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chọn nguồn ảnh"
            android:textSize="16sp"
            android:textColor="@color/orange"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_gravity="center"
            android:fontFamily="@font/futura_bold"/>
    </androidx.appcompat.widget.Toolbar>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnOpenCameraReturn"
            android:layout_width="0dp"
            android:layout_height="130dp"
            android:text="Mở camera"
            android:fontFamily="@font/futura_book"
            android:textColor="@color/orange"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:drawableTop="@drawable/ic_action_camera"
            android:background="@drawable/bg_edittext"
            android:padding="20dp"
            android:layout_marginVertical="10dp"
            android:layout_weight="5"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnOpenLibraryReturn"
            android:layout_width="0dp"
            android:layout_height="130dp"
            android:text="Mở thư viện ảnh"
            android:fontFamily="@font/futura_book"
            android:textColor="@color/orange"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:drawableTop="@drawable/ic_action_library_image"
            android:background="@drawable/bg_edittext"
            android:padding="20dp"
            android:layout_marginVertical="10dp"
            android:layout_weight="5"
            android:layout_marginStart="10dp"/>
    </LinearLayout>
</LinearLayout>