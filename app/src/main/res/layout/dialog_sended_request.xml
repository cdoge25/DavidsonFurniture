<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:cardCornerRadius="10dp">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_notifications_readall"
        android:layout_gravity="center"
        android:layout_marginVertical="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đã gửi yêu cầu trả hàng"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"
        android:fontFamily="@font/futura_bold"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Trong vòng 3 ngày, Davidson Furniture sẽ xem xét và xác nhận yêu cầu trả hàng của quý khách. Nếu yêu cầu hợp lệ, chúng tôi sẽ cử nhân viên đến tại địa chỉ giao hàng để kiểm tra và thu hồi lại sản phẩm. Trong thời gian này, quý khách xin vui lòng kiểm tra email và tin nhắn điện thoại trong trường hợp chúng tôi cần liên lạc để trao đổi thông tin."
        android:textSize="16sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal|center"
        android:gravity="left"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"
        android:fontFamily="@font/futura_book"
        android:justificationMode="inter_word"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnCancel"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_button_orange"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:text="Trang chủ"
        android:textSize="20sp"
        android:fontFamily="@font/futura_bold"
        android:layout_gravity="center"
        android:layout_marginVertical="10dp"/>

</LinearLayout>