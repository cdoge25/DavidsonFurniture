<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Xác nhận hoàn tất"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="center"
            android:fontFamily="@font/futura_bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bạn có chắc chắn bạn đã nhận và hài lòng với sản phẩm? Bạn sẽ không thể gửi yêu cầu trả hàng sau khi xác nhận."
            android:textSize="16sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal|center"
            android:gravity="left"
            android:layout_marginVertical="20dp"
            android:fontFamily="@font/futura_book"
            android:justificationMode="inter_word"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnCancelComplete"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_button_black"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:text="Hủy"
                android:textSize="20sp"
                android:fontFamily="@font/futura_bold"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnConfirmComplete"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:background="@drawable/bg_button_orange"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:text="Hoàn tất"
                android:textSize="20sp"
                android:fontFamily="@font/futura_bold"/>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>