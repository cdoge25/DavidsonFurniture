<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.OrderDetailActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarOrderDetail"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:navigationIcon="@drawable/ic_action_back"
        app:contentInsetStartWithNavigation="0dp"
        android:layout_marginBottom="0dp"
        android:elevation="5dp"
        android:background="@color/white">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chi tiết đơn hàng"
            android:fontFamily="@font/futura_bold"
            android:textColor="@color/orange"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_marginEnd="50dp"/>
    </androidx.appcompat.widget.Toolbar>
    <!--END HEADER-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mã đơn hàng: DF123456789"
        android:layout_marginTop="10dp"
        android:layout_marginStart="25dp"
        android:textColor="@color/orange"
        android:textSize="16sp"
        android:fontFamily="@font/futura_book"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="25dp"
        app:cardCornerRadius="20dp"
        android:elevation="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/smoke">
            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewDetail"
                android:layout_width="130dp"
                android:layout_height="100dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_margin="10dp"
                android:elevation="2dp"
                app:cardCornerRadius="20dp">
                <ImageView
                    android:id="@+id/imvOrderDetailThumb"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_bancafe_luki" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="0dp"
                android:layout_toEndOf="@+id/cardViewDetail"
                android:orientation="vertical"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/txtOrderDetailName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LUKI"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:fontFamily="@font/futura_bold"/>

                <TextView
                    android:id="@+id/txtType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bàn cafe"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/grey"
                    android:textSize="12sp"
                    android:fontFamily="@font/futura_book"/>

                <TextView
                    android:id="@+id/txtColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đen"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:fontFamily="@font/futura_book"/>

                <TextView
                    android:id="@+id/txtOrderDetailPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1,350,000đ"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/orange"
                    android:textSize="14sp"
                    android:fontFamily="@font/futura_book"/>

                <TextView
                    android:id="@+id/txtQuantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Số lượng: 1"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:fontFamily="@font/futura_book"/>
            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="45dp"
        android:layout_marginTop="20dp">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_status_pending"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chờ xác nhận"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:fontFamily="@font/futura_book"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"/>
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Hủy đơn"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:fontFamily="@font/futura_bold"
        android:layout_marginTop="350dp"
        android:textAllCaps="false"
        android:paddingHorizontal="30dp"
        android:paddingVertical="10dp"
        android:background="@drawable/bg_button_orange"/>
</LinearLayout>