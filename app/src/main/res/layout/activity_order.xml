<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.OrderActivity"
    android:orientation="vertical">

    <!--END HEADER-->

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarOrderDetail"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginBottom="0dp"
        android:background="@color/white"
        android:elevation="5dp"
        app:contentInsetStartWithNavigation="0dp"
        app:navigationIcon="@drawable/ic_action_back"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="50dp"
            android:fontFamily="@font/futura_bold"
            android:gravity="center"
            android:text="Đặt hàng"
            android:textColor="@color/orange"
            android:textSize="20sp" />
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_marginStart="20sp"
        android:layout_marginEnd="20sp"
        android:layout_marginTop="15sp"
        android:background="@drawable/custom_view"
        android:gravity="center_vertical"
        android:weightSum="3">

        <ImageView
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:src="@drawable/ic_pick_location"
            android:background="@drawable/custom_view"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="265sp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_marginStart="5sp"
            android:layout_weight="1">
            
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Địa chỉ giao hàng"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:fontFamily="@font/futura_book"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phường Linh Xuân, TP.Thủ Đức"
                android:textSize="14sp"
                android:textColor="@color/grey"
                android:fontFamily="@font/futura_book"/>
        </LinearLayout>
        
        <ImageButton
            android:id="@+id/btn_editAddress"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:src="@drawable/ic_action_edit"
            android:background="@drawable/custom_view"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_marginTop="15sp"
        android:layout_marginStart="20sp"
        android:layout_marginEnd="20sp"
        android:background="@drawable/custom_view"
        android:gravity="center_vertical"
        android:weightSum="3">

        <ImageView
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:src="@drawable/ic_pick_delivery_method"
            android:background="@drawable/custom_view"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="265sp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_marginStart="5sp"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phương thức giao hàng"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:fontFamily="@font/futura_book"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tiêu chuẩn"
                android:textSize="14sp"
                android:textColor="@color/grey"
                android:fontFamily="@font/futura_book"
                />
        </LinearLayout>

        <ImageButton
            android:id="@+id/btn_editDelivery"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:src="@drawable/ic_action_edit"
            android:background="@drawable/custom_view"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_marginTop="15sp"
        android:layout_marginStart="20sp"
        android:layout_marginEnd="20sp"
        android:background="@drawable/custom_view"
        android:gravity="center_vertical"
        android:weightSum="3">

        <ImageView
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:src="@drawable/ic_pick_voucher"
            android:background="@drawable/custom_view"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="265sp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_marginStart="5sp"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mã giảm giá"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:fontFamily="@font/futura_book"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Miễn phí vận chuyển"
                android:textSize="14sp"
                android:textColor="@color/grey"
                android:fontFamily="@font/futura_book" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/btn_editVoucher"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:src="@drawable/ic_action_edit"
            android:background="@drawable/custom_view"
            android:layout_weight="1"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sản phẩm:"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginStart="20sp"
        android:layout_marginEnd="20sp"
        android:textColor="@color/black"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="270sp"
        android:layout_marginStart="20sp"
        android:layout_marginEnd="20sp"
        android:layout_marginTop="10sp">

        <ListView
            android:id="@+id/lv_productOrder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/custom_view_2">
        </ListView>

    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5sp"
        android:layout_marginTop="5sp"
        android:layout_marginStart="20sp"
        android:layout_marginEnd="20sp"
        android:background="@drawable/custom_view_2">

        <TableRow android:weightSum="2">
            <TextView
                android:text="Tiền hàng"
                android:layout_weight="1"
                android:layout_gravity="left"
                android:fontFamily="@font/futura_book"
                android:textColor="@color/black"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/txt_totalPrice"
                android:text="1,300,000đ"
                android:layout_weight="1"
                android:layout_gravity="right"
                android:fontFamily="@font/futura_book"
                android:textColor="@color/black"
                android:gravity="right"
                android:textSize="14sp"/>
        </TableRow>

        <TableRow android:weightSum="2">
            <TextView
                android:text="Phí vận chuyển"
                android:layout_weight="1"
                android:layout_gravity="left"
                android:fontFamily="@font/futura_book"
                android:textColor="@color/black"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/txt_feeDelivery"
                android:text="100,000đ"
                android:layout_weight="1"
                android:layout_gravity="right"
                android:fontFamily="@font/futura_book"
                android:textColor="@color/black"
                android:gravity="right"
                android:textSize="14sp"/>
        </TableRow>

        <TableRow android:weightSum="2">
            <TextView
                android:text="Giảm giá"
                android:layout_weight="1"
                android:layout_gravity="left"
                android:fontFamily="@font/futura_book"
                android:textColor="@color/black"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/txt_discount"
                android:layout_gravity="right"
                android:gravity="right"
                android:layout_weight="1"
                android:fontFamily="@font/futura_book"
                android:text="- 50,000đ"
                android:textColor="@color/black"
                android:textSize="14sp"/>
        </TableRow>

        <TableRow android:weightSum="2">
            <TextView
                android:text="Tổng thanh toán"
                android:layout_weight="1"
                android:textColor="#FF6600"
                android:fontFamily="@font/futura_book"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/txt_totalPriceFinal"
                android:text="1,350,000đ"
                android:layout_weight="1"
                android:layout_gravity="right"
                android:gravity="right"
                android:textColor="#FF6600"
                android:fontFamily="@font/futura_book"
                android:textSize="14sp"/>
        </TableRow>

    </TableLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_marginTop="10sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="20sp"
        android:paddingEnd="20sp"
        android:paddingTop="10sp"
        android:paddingBottom="10sp"
        android:gravity="center">

        <Button
            android:id="@+id/btn_continueOrder"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:text="Tiếp tục"
            android:textSize="20sp"
            android:background="@drawable/custom_button"
            android:textAllCaps="false"
            android:gravity="center"/>
    </LinearLayout>












</LinearLayout>