<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.OrderActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="68sp"
        android:orientation="horizontal"
        android:paddingStart="20sp">

        <ImageButton

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_action_back"
            android:layout_gravity="center_vertical"
            android:background="#FFFFFF"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đặt hàng"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#FF6600"
            android:layout_marginStart="110sp"
            android:layout_gravity="center"
            />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_marginStart="20sp"
        android:layout_marginEnd="20sp"
        android:layout_marginTop="15sp"
        android:background="@drawable/custom_view"
        android:gravity="center_vertical"
        android:weightSum="3">

        <ImageView
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:src="@drawable/ic_pick_location"
            android:background="@drawable/custom_view"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="265sp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_marginStart="5sp"
            android:layout_weight="1">
            
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Địa chỉ giao hàng"
                android:textSize="14sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phường Linh Xuân, TP.Thủ Đức"
                android:textSize="14sp"
                />
        </LinearLayout>
        
        <ImageButton
            android:id="@+id/btn_editAddress"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:src="@drawable/ic_action_edit"
            android:background="@drawable/custom_view"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_marginTop="15sp"
        android:layout_marginStart="20sp"
        android:layout_marginEnd="20sp"
        android:background="@drawable/custom_view"
        android:gravity="center_vertical"
        android:weightSum="3">

        <ImageView
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:src="@drawable/ic_pick_delivery_method"
            android:background="@drawable/custom_view"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="265sp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_marginStart="5sp"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phương thức giao hàng"
                android:textSize="14sp"
                android:textStyle="bold"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tiêu chuẩn"
                android:textSize="14sp"
                />
        </LinearLayout>

        <ImageButton
            android:id="@+id/btn_editDelivery"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:src="@drawable/ic_action_edit"
            android:background="@drawable/custom_view"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_marginTop="15sp"
        android:layout_marginStart="20sp"
        android:layout_marginEnd="20sp"
        android:background="@drawable/custom_view"
        android:gravity="center_vertical"
        android:weightSum="3">

        <ImageView
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:src="@drawable/ic_pick_voucher"
            android:background="@drawable/custom_view"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="265sp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_marginStart="5sp"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mã giảm giá"
                android:textSize="14sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Miễn phí vận chuyển"
                android:textSize="14sp"
                />
        </LinearLayout>

        <ImageButton
            android:id="@+id/btn_editVoucher"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:src="@drawable/ic_action_edit"
            android:background="@drawable/custom_view"
            android:layout_weight="1"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sản phẩm:"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginStart="20sp"
        android:layout_marginEnd="20sp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250sp"
        android:layout_marginStart="20sp"
        android:layout_marginEnd="20sp"
        android:layout_marginTop="10sp">

        <ListView
            android:id="@+id/lv_productOrder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/custom_view_2"
            >

        </ListView>




    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:padding="5sp"
        android:layout_marginTop="5sp"
        android:layout_marginStart="20sp"
        android:layout_marginEnd="20sp"
        android:background="@drawable/custom_view_2">

        <TableRow android:weightSum="2">
            <TextView
                android:text="Tiền hàng"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/txt_totalPrice"
                android:text="1,3000,000đ"
                android:layout_weight="1"
                android:gravity="right"/>
        </TableRow>

        <TableRow android:weightSum="2">
            <TextView
                android:text="Phí vận chuyển"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/txt_feeDelivery"
                android:text="100,000đ"
                android:layout_weight="1"
                android:gravity="right"/>
        </TableRow>

        <TableRow android:weightSum="2">
            <TextView
                android:text="Giảm giá"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/txt_discount"
                android:text="-50,000đ"
                android:layout_weight="1"
                android:gravity="right"/>
        </TableRow>

        <TableRow android:weightSum="2">
            <TextView
                android:text="Tổng thanh toán"
                android:layout_weight="1"
                android:textColor="#FF6600"/>

            <TextView
                android:id="@+id/txt_totalPriceFinal"
                android:text="1,400,000đ"
                android:layout_weight="1"
                android:gravity="right"
                android:textColor="#FF6600"/>
        </TableRow>







    </TableLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_marginTop="10sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="20sp"
        android:paddingEnd="20sp"
        android:paddingTop="10sp"
        android:paddingBottom="10sp"
        android:gravity="center">

        <Button
            android:id="@+id/btn_continueOrder"
            android:layout_width="match_parent"
            android:layout_height="44sp"
            android:text="Tiếp tục"
            android:textSize="20sp"
            android:background="@drawable/custom_button"/>
    </LinearLayout>












</LinearLayout>