<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.DetailProductActivity"
    android:padding="10dp"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarNewProduct"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:navigationIcon="@drawable/ic_action_back"
        app:contentInsetStartWithNavigation="0dp"
        android:layout_marginStart="-5dp"
        android:layout_marginBottom="10dp"
        android:elevation="2dp"
        android:background="@color/white">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ALICE"
            android:textSize="28sp"
            android:textColor="#FF6600"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginEnd="46dp"/>
    </androidx.appcompat.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txtName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ALICE"
            android:textStyle="bold"
            android:textSize="32sp" />

        <TextView
            android:id="@+id/txtRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginEnd="34dp"
            android:text="4.7"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center"
            android:layout_marginEnd="15dp"
            android:src="@drawable/ic_rating_star"
            android:layout_centerVertical="true"/>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txtProductCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sofa bằng"
            android:textSize="20sp"
            android:layout_centerVertical="true"/>
        <Button
            android:id="@+id/btnSeeReview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xem đánh giá"
            android:textColor="#9E9E9E"
            android:layout_alignParentEnd="true"
            android:background="#00000000"
            android:textSize="16sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txtPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4.500.000"
            android:textSize="24sp"
            android:textColor="#FF6600"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="đ"
            android:textSize="24sp"
            android:textColor="#FF6600"
            android:layout_marginLeft="1dp" />
    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kích thước:"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginTop="20dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="D120 x R63 x C82 cm"
        android:textSize="16sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chất liệu: "
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Vải Indonesia, khung gỗ tần bì"
        android:textSize="16sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Màu sắc: "
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginTop="20dp"/>

    <RadioButton
        android:id="@+id/radWhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Trắng"
        android:textSize="16sp"/>

    <RadioButton
        android:id="@+id/radGray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Xám"
        android:textSize="16sp"/>

    <RadioButton
        android:id="@+id/radBlack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đen"
        android:textSize="16sp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imbSubtract"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_action_minus"
            />

        <TextView
            android:id="@+id/txtProductQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:gravity="center_vertical"
            android:text="02"
            android:textSize="22sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/imbAdd"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_action_plus"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal">

        <androidx.appcompat.widget.AppCompatButton

            android:id="@+id/btnAddToCart"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="#FF6600"
            android:paddingHorizontal="5dp"
            android:layout_weight="0.5"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:text="Thêm vào giỏ hàng"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>